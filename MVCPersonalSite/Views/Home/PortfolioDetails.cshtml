                            <div class="swiper-slide">
                                <img src="~/@Model.Image1" alt="">
                            </div>

                            <div class="swiper-slide">
                                <img src="~/@Model.Image2" alt="">
                            </div>

                            <div class="swiper-slide">
                                <img src="~/@Model.Image3" alt="">
                            </div>

                        </div>
                        <div class="swiper-pagination"></div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="portfolio-info">
                        <h3>Web API Project Information</h3>
                        <ul>
                            <li><strong>Category</strong>: React & CRUD</li>
                            <li><strong>Client</strong>: none</li>
                            <li><strong>Project date</strong>: @Model.ProjectDate.ToShortDateString()</li>
                            <li><strong>Project URL</strong>: <a href="@Model.GitHub" target="_blank">ToDo</a></li>
                        </ul>
                    </div>
                    <div class="portfolio-description">
                        <h2>@Model.Name</h2>
                        <p>
                            @Model.Description
                        </p>
                    </div>
                </div>

            </div>

        </div>
    </section><!-- End Portfolio Details Section -->

     <!-- ======= Portfolio Details Section ======= -->
    <section id="portfolio-details-react" class="portfolio-details">
      <div class="container">

        <div class="row gy-4">

          <div class="col-lg-8">
